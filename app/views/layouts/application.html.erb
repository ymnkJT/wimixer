<!DOCTYPE html>
<html>
<head>
  <title>Wimixer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
  <% if user_signed_in? %>
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/pieces">
              <%= image_tag 'wimixer_logo.png', :class => "wimixer_label" %>
            </a>
          </div>

          <ul class="nav navbar-nav navber-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"\
                  role="button" aria-haspopup="true" aria-expanded="false">
                  <span class="glyphicon glyphicon-th-list" height="20"></span>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-right">
                  <li><%= link_to "楽曲登録", new_piece_path %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "マイページ", root_path %></li>
                  <li><%= link_to "ユーザー設定", root_path if user_signed_in? %></li>
                  <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                </ul>
            </ul>

        </div>
      </nav>
    </header>
  <% end %>

<%= yield %>

</body>
</html>

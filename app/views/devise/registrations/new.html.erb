<div class="box container-fluid">
  <div class="box row">
    <div class="form-aria col-sm-6 col-sm-offset-3">
      <h3>ユーザー登録</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="field">
          <%= f.text_field :nickname, autofocus: true, class: "form-control", placeholder: "ニックネーム" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上で設定して下さい)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード再入力（確認用）" %>
        </div>

        <div class="actions">
          <%= f.submit "Go!", class: "btn btn-success btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

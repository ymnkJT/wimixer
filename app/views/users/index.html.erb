<div class="box container-fluid">
  <p class="top-notice"><%= notice %></p>
  <div class="row">
    <div class="form-aria col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
      <h4>〜あなたのコメント/メモ一覧〜</h4>
      <% @comments.each do |comment| %>
      <% unless comment.id.nil? %>
        <div class="comment clearfix">
          <div class="title">
            <%= link_to piece_path(comment.piece) do %>
              <%= comment.piece.title %> (<%=comment.created_at.strftime("%y/%m/%d %p %l:%M") %>)
            <% end %>
          </div>

          <% if comment.play == true then %>
            <div class="label label-primary">演奏した</div>
          <% end %><br>

          <div class="button-bar clearfix">
          <%= link_to "削除", piece_comment_path(comment.piece.id, comment.id), method: :delete, \
            data: { confirm: '本当に削除しますか？' }, class: 'btn btn-default btn-sm' %>
          <%= link_to "編集", edit_piece_comment_path(comment.piece.id, comment.id), class: 'btn btn-default btn-sm' %>
          </div>

          <div class="content">
            《コメント》<br>
            <%= comment.content %>
          </div>

          <div class="memo">
            《メモ》<br>
            <%= comment.memo %>
          </div>
        </div>
      <% end %>
      <% end %>
      <%= link_to "トップへ戻る", pieces_path %>
    </div>
  </div>
</div>